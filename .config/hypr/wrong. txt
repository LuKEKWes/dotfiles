# FLOATY WINDOWS #
windowrule = float, class:^(floaty-window)$
windowrule = center, class:^(floaty-window)$
windowrule = size 800 500, class:^(floaty-window)$
windowrule = dimaround, class:^(floaty-window)$

# BLUEMAN #
windowrule = float, class:^(blueman-.*)$
windowrule = center, class:^(blueman-.*)$
windowrule = size 800 500, class:^(blueman-manager)$
windowrule = dimaround, class:^(blueman-.*)$


